<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="form-container">
    <h2 class="form-title">Forgot Password</h2>
    <p class="form-subtitle">Enter your email to receive a reset link.</p>

    <form action="/password/forgot" method="POST" class="forgot-form" id="forgotForm" novalidate>
      <label for="email">Email Address:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter your email"
        autocomplete="email"
        required
      >

      <!-- Cloudflare Turnstile widget -->
      <div
        class="cf-turnstile"
        data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"
        data-callback="onTurnstileVerified"
      ></div>

      <button type="submit" class="btn-submit">Send Reset Link</button>
    </form>

    <p class="form-note">
      Remember your password? <a href="/users/login">Back to Login</a>
    </p>
  </div>

  <!-- Turnstile script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <script>
    // Called by Cloudflare Turnstile when verification succeeds
    function onTurnstileVerified(token) {
      console.log("Turnstile verification OK:", token);
      // you can also enable the button here if you want
      // document.querySelector('.btn-submit').disabled = false;
    }

    // Front-end guard: require Turnstile token before submit
    document.getElementById('forgotForm').addEventListener('submit', function (e) {
      const token = document.querySelector('[name="cf-turnstile-response"]')?.value;
      if (!token) {
        e.preventDefault();
        alert('Please complete the human verification.');
      }
    });
  </script>
</body>
</html>
