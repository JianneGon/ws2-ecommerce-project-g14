<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="auth-container">
    <h1 class="form-title">Login</h1>
    <p class="form-subtitle">Welcome back! Please enter your credentials:</p>

    <% if (typeof message !== "undefined" && message) { %>
      <p style="color: red; font-weight: bold; text-align: center; margin-bottom: 10px;">
        <%= message %>
      </p>
    <% } %>

    <form action="/users/login" method="POST" class="login-form">
      <input type="email" id="email" name="email" placeholder="Email" required>

      <div class="password-wrapper">
        <input type="password" id="password" name="password" placeholder="Password" required>
        <button type="button" class="toggle-password" onclick="togglePassword()">Show</button>
      </div>

      <!-- Turnstile widget -->
      <div class="cf-turnstile" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>

      <button type="submit" class="btn-login">Login</button>
    </form>

    <p class="form-note">
      Donâ€™t have an account? <a href="/users/register">Register here</a>
    </p>

    <p class="form-note">
      <a href="/password/forgot">Forgot Password?</a>
    </p>
  </div>

  <!-- Turnstile script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <!-- Minimal JS for Turnstile token check -->
  <script>
    document.querySelector('.login-form').addEventListener('submit', function(e) {
      const token = document.querySelector('[name="cf-turnstile-response"]')?.value;
      console.log('Turnstile token:', token);
      if (!token) {
        e.preventDefault();
        alert("Please complete the human verification.");
      }
    });

    // Toggle password visibility (keep your original functionality)
    function togglePassword() {
      const input = document.querySelector('.password-wrapper input');
      input.type = input.type === 'password' ? 'text' : 'password';
    }
  </script>
</body>
</html>
