<h1 class="page-title">My Orders</h1>

<% if (!orders || !orders.length) { %>
  <p class="no-users-text">You have no orders yet.</p>
  <p class="register-user-link">
    <a href="/products" class="btn-primary">Start Shopping</a>
  </p>
<% } else { %>

<div class="orders-list-container">

    <!-- HEADER -->
    <div class="orders-header-row">
        <span class="col-id">Order ID</span>
        <span class="col-date">Date</span>
        <span class="col-items">Items</span>
        <span class="col-total">Total</span>
        <span class="col-status">Status</span>
        <span class="col-view"></span>
    </div>

    <!-- ROWS -->
    <% orders.forEach(order => { %>
        <div class="orders-row">

            <div class="col-id"><%= order.orderId %></div>

            <div class="col-date">
                <%= order.createdAt.toLocaleString() %>
            </div>

            <div class="col-items">
                <%= order.totalQty %>
            </div>

            <div class="col-total">
                â‚±<%= order.totalAmount.toFixed(2) %>
            </div>

            <div class="col-status">
                <%= order.status.replace(/_/g, " ").replace(/\b\w/g, c => c.toUpperCase()) %>
            </div>

            <div class="col-view">
                <a href="/orders/<%= order.orderId %>" class="order-details-link">Details</a>
            </div>

        </div>
    <% }) %>

</div>

<% } %>
